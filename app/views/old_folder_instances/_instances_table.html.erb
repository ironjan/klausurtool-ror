<div class="clearfix spacer">
  <% if @old_folder_instances.nil? || @old_folder_instances.empty? %>
      <p>Keine Ordner gefunden.</p>
  <% else %>
      <%= will_paginate @old_folder_instances %>

      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Code</th>
          <th>Gruppen-Name</th>
          <th>Gebiet</th>
          <th>Inhalt</th>
          <th></th>
        </tr>

        <% @old_folder_instances.each do |i| %>
            <tr>
              <td style="background-color: <%= i.old_folder.css_color %>"></td>
              <td><%= i.barcodeId %></td>
              <td><%= link_to i.old_folder.title, i.old_folder %></td>
              <td><%= link_to i.old_folder.area %></td>
              <td><%= link_to i.old_folder.contentType %></td>

              <td>
                <!-- Action is rendered depending on the controller that renders this page -->
                <%= render "ausleihe/lending_action", i: i if controller_name == "ausleihe" %>
                <%= render "old_folder_instances/delete_action", i: i if controller_name == "old_folder_instances" %>
              </td>
            </tr>
        <% end %>
      </table>
  <% end %>
</div>
