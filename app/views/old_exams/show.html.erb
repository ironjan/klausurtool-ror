<h1>Prüfungs-Details</h1>
<ul class="nav">
	<li><%= link_to "Bearbeiten", edit_old_folder_old_exam_path(@old_exam.old_folder, @old_exam) %></li>
	<li><%= link_to "Löschen", [@old_exam.old_folder, @old_exam], method: :delete,
		data: { confirm: 'Prüfung wirklich löschen?' } %>
	</li>
</ul>
<p>Prüfung gehört zu Ordner <%= link_to @old_exam.old_folder.title, @old_exam.old_folder %>.</p>
<table>
	<tr>
		<td>Veranstaltungen:</td>
		<td><%= @old_exam.title %></td>
	</tr>
	<tr>
		<td>Prüfer:</td>
		<td><%= @old_exam.examiners %></td>
	</tr>
	<tr>
		<td>Datum:</td>
		<td><%= @old_exam.date %></td>
	</tr>
</table>