<div>
  <%= page_heading 'Prüfungen mit defektem Encoding' %>


  <div class="spacer">
    <% if @old_exams.size > 0 %>
        <table class="table table-hover">
          <tr>
            <th>Veranstaltungen</th>
            <th>Prüfer</th>
            <th>Datum</th>
            <th>Ordner</th>
            <th></th>
          </tr>

          <% @old_exams.each do |e| %>
              <tr>
                <td><%= e.title %></td>
                <td><%= e.examiners %></td>
                <td><%= e.date %></td>
                <td><%= link_to e.old_folder.title, e.old_folder %></td>
                <td>
                  <%= link_to 'Anzeigen', old_exam_path(e) %>,
                  <%= link_to 'Bearbeiten', edit_old_exam_path(e) %>
                </td>
              </tr>
          <% end %>
        </table>

    <% else %>
        <p>Keine Prüfungen gefunden.</p>
    <% end %>
  </div>
</div>