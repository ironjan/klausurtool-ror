<h1>Ordnergruppen-Details</h1>
<ul class="nav">
	<li><%= link_to "Bearbeiten", edit_old_folder_path %></li>
	<li><%= link_to "Löschen", old_folder_path(@old_folder), method: :delete,
		data: { confirm: 'Dies löscht ALLE verknüpften Exemplare und Klausuren. Wirklich löschen?' } %>
	</li>
</ul>

<div>
	<table>
		<tr>
			<td>Name:</td>
			<td><%= @old_folder.title %></td>
		</tr>
		<tr>
			<td>Inhalt:</td>
			<td><%= @old_folder.contentType %></td>
		</tr>
		<tr>
			<td>Gebiet:</td>
			<td><%= @old_folder.area %></td>
		</tr>
		<tr>
			<td>Farbe:</td>
			<td><%= @old_folder.color %></td>
		</tr>
	</table>
</div>

<%= render "contained_instances" %>