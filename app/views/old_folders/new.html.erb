<% page_heading "Neue Ordnergruppe" %>

<%= form_for @old_folder do |f| %>
<%= render 'error_header' %>

<table>
	<tr>
		<td><%= f.label "Name" %></td>
		<td><%= f.text_field :title %></td>
	</tr>
	<tr>
		<td><%= f.label "Inhalt" %></td>
		<td><%= f.select(:contentType, options_for_select(OldFolder::CONTENT_TYPES)) %></td>
	</tr>
	<tr>
		<td><%= f.label "Gebiet" %></td>
		<td><%= f.select(:area, options_for_select(OldFolder::AREAS)) %></td>
	</tr>
	<tr>
		<td><%= f.label "Farbe" %></td>
    <td><%= f.select :color, OldFolder.color_names_for_select %></td>
	</tr>	
	<tr>
	<td><%= f.label "Anzahl" %></td>
	<td><%= number_field_tag("count", 1, min: 1, max: 9, step: 1) %></td>
</tr>
<tr>
	<td></td>
	<td><%= f.submit "Gruppe anlegen" %>
	</td>
</tr>
</table>
<% end %>