<h1>Ordnergruppen</h1>
<ul class="nav">
	<li><%= link_to "Neue Ordnergruppe", new_old_folder_path %></li>
</ul>
<div>
<table>
	<tr>
		<th>Gruppen-Name</th>
		<th>Inhalt</th>
		<th>Gebiet</th>
		<th>Farbe</th>
		<th></th>
	</tr>

	<% @old_folders.each do |old_folder| %>
	<tr>
		<td><%= link_to old_folder.title, old_folder %></td>
		<td><%= old_folder.contentType %></td>
		<td><%= old_folder.area %></td>
		<td><%= old_folder.color %></td>
		<td><%= link_to "Bearbeiten", edit_old_folder_path(old_folder) %>
		</td>
	</tr>
	<% end %>
</table>
</div>
