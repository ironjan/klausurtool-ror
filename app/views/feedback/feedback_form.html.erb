<% page_heading 'Feedback' %>

<div class="clearfix spacer">


  <%= form_tag send_feedback_path, :method => 'post', id: 'form', html: {class: 'form-horizontal', role: 'form'} do %>
      <div class="form-group row">
        <b>
          Noch nicht fertig implementiert. Feedback wird sehr wahrscheinlich nicht versendet!
        </b>
      </div>

      <div class="form-group row">
        <%= label_tag :source_page, 'Feedback für:', :class => 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= text_field_tag :source_page, params[:source_page], :class => 'form-control', :readonly => 'readonly' %>
        </div>
      </div>

      <div class="form-group row">
        <%= label_tag :imt, 'IMT-Login:', :class => 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= text_field_tag :imt, params[:imt], required: true, list: 'lenders-and-receivers', :class => 'form-control', autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= label_tag :comment, 'Kommentar:', :class => 'control-label col-sm-2' %><br>
        <%= text_area_tag :comment, params[:comment], placeholder: 'Kommentar', required: true,
                          rows: 6, columns: 10, :class => 'form-control  col-sm-10' %>
      </div>
      <div class="form-group row pull-right">
        <%= submit_tag 'Zurücksetzen', :id => 'reset_button', :type => 'reset', class: 'btn' %>
        <%= submit_tag 'Feedback senden', class: 'btn btn-primary' %>
      </div>
  <% end %>


</div>